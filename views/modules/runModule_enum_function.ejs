<html>
<head>
<title>
Testing <%= module_name %>
</title>

<script type="text/javascript">
var rows = [];
var addResult = function(args, type){
	var obj = {};
	obj.data = [];
	for(var x in args)
		obj.data.push(args[x]);
	obj.type = type;
	rows.push(obj);
}
</script>

</head>

<body>
<textarea id="user_script" style="display:none;">

// Our code
// API - addResult(), addError(), addSuccess(), addInfo()


